{{ 'component-image-with-text.css' | asset_url | stylesheet_tag }}
{{ 'section-multicolumn.css' | asset_url | stylesheet_tag }}
{{ 'component-slider.css' | asset_url | stylesheet_tag }}

<div class="benefits-section color-{{ section.settings.color_scheme }} gradient">
    <div class="page-width page-width--narrow section-{{ section.id }}-padding">
      <div class="benefits-content">
        {%- for block in section.blocks -%}
          <div class="benefit-item">
            {% if block.type == 'heading' %}
              <h2 class="benefits-title {{ block.settings.heading_size }}">
                {{ block.settings.heading }}
              </h2>
            {% endif %}

            {%- for block in section.blocks -%}
                {% case block.type %}
                  {%- when 'text' -%}
                    <div class="image-with-text__text rte {{ block.settings.text_style }}" {{ block.shopify_attributes }}>
                      {{ block.settings.text }}
                    </div>
                {%- endcase -%}
              {%- endfor -%}

            {% comment %}
            {% if block.type == 'text' %}
              <p class="benefits-description">
                {{ block.settings.text }}
              </p>
            {% endif %}
        {% endcomment %}
            {% if block.type == 'image' %}
              <div class="benefits-image">
             {% comment %}<img src="{{ block.settings.image | image_url: 'large' }}" alt="{{ block.settings.image.alt }}" width="100%" height="100%"/>{% endcomment %}
                <img img src="{{ 'comparison-img.png' | asset_url }}" alt="{{ block.settings.image.alt }}" width="100%" height="100%"/>
              </div>
            {% endif %}
          </div>
        {%- endfor -%}
      </div>
    </div>
  </div>
{% schema %}
{
  "name": "Benefits",
  "settings": [
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color Scheme",
      "default": "scheme-1"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Padding Superior",
      "min": 0,
      "max": 100,
      "default": 36,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Padding Inferior",
      "min": 0,
      "max": 100,
      "default": 36,
      "unit": "px"
    }
  ],
  "blocks": [
    {
      "type": "heading",
      "name": "Heading",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Texto del Encabezado",
          "default": "Descubre el Confort y Soporte que Mereces"
        },
        {
          "type": "select",
          "id": "heading_size",
          "label": "Tamaño del Encabezado",
          "default": "h2",
          "options": [
            { "value": "h1", "label": "H1" },
            { "value": "h2", "label": "H2" },
            { "value": "h3", "label": "H3" }
          ]
        }
      ]
    },
    {
       
      "type": "text",
      "name": "t:sections.image-with-text.blocks.text.name",
      "limit": 1,
      "settings": [
        {
          "type": "richtext",
          "id": "text",
          "default": "t:sections.image-with-text.blocks.text.settings.text.default",
          "label": "t:sections.image-with-text.blocks.text.settings.text.label"
        },
        {
          "type": "select",
          "id": "text_style",
          "options": [
            {
              "value": "body",
              "label": "t:sections.image-with-text.blocks.text.settings.text_style.options__1.label"
            },
            {
              "value": "subtitle",
              "label": "t:sections.image-with-text.blocks.text.settings.text_style.options__2.label"
            }
          ],
          "default": "body",
          "label": "t:sections.image-with-text.blocks.text.settings.text_style.label"
        }
      ]
    },
    {
      "type": "image",
      "name": "Imagen",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Selecciona una Imagen"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Sección de Beneficios",
      "category": "Custom"
    }
  ]
}

{% endschema %}